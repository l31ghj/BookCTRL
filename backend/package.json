{
  "name": "bookctrl-backend",
  "version": "1.0.0",
  "description": "BookCTRL backend - self-hosted ebook downloader and OPDS server",
  "scripts": {
    "build": "nest build",
    "postbuild": "cp -r src/views dist/views || xcopy src\\views dist\\views /E /I /Y",
    "start": "node dist/main.js",
    "start:docker": "npx prisma migrate deploy && node dist/main.js",
    "start:dev": "nest start --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@prisma/client": "^6.0.0",
    "axios": "^1.7.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "hbs": "^4.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.0",
    "prisma": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0"
  }
}
